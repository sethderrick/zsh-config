alias free="vm_state | grep free" # display free and used memory
alias logs="tail -f /var/log/system.log" # tail system logs
alias pkill="pkill -f" # kill a process by name
alias reload="source ~/.zshrc"
alias shutdown="sudo showdown -h now" # shutdown computer
alias top="top -o cpu" # Display processes sorted by cpu Usage
alias update="brew update && brew upgrade"

